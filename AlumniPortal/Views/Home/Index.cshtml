@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a; /* Pale maroon color */
            width: 100%;
            z-index: 1000; /* Ensure navbar is on top */
            min-height: 4.5rem; /* Set minimum height for the navbar */
            padding: 0 1rem; /* Adjust padding inside the navbar */
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif; /* Apply Cinzel font to navbar elements */
            font-weight: 400; /* Apply Cinzel Regular (400) */
            font-size: 20px; /* Increase font size for navbar text */
        }

        .navbar-brand {
            display: flex;
            align-items: center; /* Center vertically */
        }

            .navbar-brand img {
                height: 50px; /* Set image height */
                margin-right: 10px; /* Adjust margin between image and text */
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a; /* Change button background color to #e6be8a */
            border-color: #e6be8a; /* Match border color with background color */
            color: black !important; /* Set initial text color to black */
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54; /* Slightly darker hover background color */
                border-color: #cc9f54; /* Match hover border color with hover background color */
                color: white !important; /* Change text color to white on hover */
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54; /* Hover background color */
                color: white !important; /* Text color on hover */
            }

        .intro-container {
            font-family: "Noto Sans", serif;
            max-width: 100%;
            margin: 20px;
            margin-top: 100px;
            margin-bottom:100px;
        }

        .user-type-option {
            cursor: pointer;
            padding: 10px;
            margin: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .user-type-option:hover {
                background-color: #f0f0f0;
            }

        h1 {
            text-align: center;
            margin: 50px auto;
            max-width: 550px;
            position: relative;
        }

            h1:before,
            h1:after {
                background-color: #800000;
                display: block;
                height: 2px;
                content: "";
                position: absolute;
                width: 150px;
                top: 50%;
                transform: translateY(-50%);
                z-index: -1;
            }

            h1:before {
                left: -75px;
            }

            h1:after {
                right: -75px;
            }

        .intro-container header {
            text-align: center;
            padding: 1px; /* Adjust the padding to move the header upwards */
            margin-top: -150px; /* Adjust the margin-top to move the header upwards */
            font-size: 20px;
            font-family: 'Noto Sans', sans-serif;
        }

        #intro {
            max-width: 900px;
            margin: auto;
            padding: 25px;
            font-family: 'Noto Sans', sans-serif;
            font-size: 18px;
            text-align: center;
            border: 5px solid #000; /* Add border properties */
            padding: 20px; /* Add padding for spacing between text and border */
            border-color: #e6be8a;
            border-radius: 10px;
        }
        .under-nav {
            position: relative;
            bottom: 80px;
            background-image: url("../Content/Images/underheader.jpg");
            background-size: cover;
            background-position: center top;
            background-repeat: no-repeat;
            height: 80vh;
            width: 100%;
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
        }
    </style>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script>
        function selectUserType(userType) {
            switch (userType) {
                case 'Alumni':
                    window.location.href = '/Account/AlumniLogin'; // Redirect to Alumni login view
                    break;
                case 'Company':
                    window.location.href = '/Account/CompanyLogin'; // Redirect to Company login view
                    break;
                case 'Admin':
                    window.location.href = '/Account/AdminLogin'; // Redirect to Admin login view
                    break;
                default:
                    break;
            }
        }
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <!-- Add 'fixed-top' class to navbar -->
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                Polytechnic University of the Philippines
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Home/About">About Us</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link btn btn-primary text-white" href="#" data-toggle="modal" data-target="#userTypeModal">Log in</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="under-nav"></div>
    </header>
    <div class="intro-container">
        <header>
            <h1><span><b>PUP Alumni Portal</b></span></h1>
        </header>
        <main>
            <section id=intro class="reveal">
                <p>
                    Welcome to the Polytechnic University of the Philippines (PUP) Alumni Portal, your gateway to staying connected with our vibrant community of graduates.
                    Our portal is designed to foster continuous engagement, offering a platform for alumni to reconnect, share experiences, and access valuable resources.
                    Whether you're seeking to expand your professional network, explore career opportunities, or stay updated with university events and news, the PUP Alumni Portal
                    is your comprehensive hub for maintaining a lifelong relationship with your alma mater. Join us in celebrating the legacy and achievements of our alumni as
                    we continue to build a stronger, more connected PUP community.
                </p>
            </section>
        </main>
    </div>

    <!-- User Type Modal -->
    <div class="modal fade" id="userTypeModal" tabindex="-1" role="dialog" aria-labelledby="userTypeModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="userTypeModalLabel">Select User Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- User type selection options -->
                    <div class="user-type-option" onclick="selectUserType('Alumni')">Alumni</div>
                    <div class="user-type-option" onclick="selectUserType('Company')">Company</div>
                    <div class="user-type-option" onclick="selectUserType('Admin')">Admin</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

</body>
</html>
