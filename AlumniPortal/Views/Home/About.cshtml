@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a; /* Pale maroon color */
            width: 100%;
            z-index: 1000; /* Ensure navbar is on top */
            min-height: 4.5rem; /* Set minimum height for the navbar */
            padding: 0 1rem; /* Adjust padding inside the navbar */
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif; /* Apply Cinzel font to navbar elements */
            font-weight: 400; /* Apply Cinzel Regular (400) */
            font-size: 20px; /* Increase font size for navbar text */
        }

        .navbar-brand {
            display: flex;
            align-items: center; /* Center vertically */
        }

            .navbar-brand img {
                height: 50px; /* Set image height */
                margin-right: 10px; /* Adjust margin between image and text */
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a; /* Change button background color to #e6be8a */
            border-color: #e6be8a; /* Match border color with background color */
            color: black !important; /* Set initial text color to black */
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54; /* Slightly darker hover background color */
                border-color: #cc9f54; /* Match hover border color with hover background color */
                color: white !important; /* Change text color to white on hover */
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54; /* Hover background color */
                color: white !important; /* Text color on hover */
            }

        .intro-container {
            font-family: "Noto Sans", serif;
            max-width: 100%;
            margin: 20px;
            margin-top: 100px;
        }

        .user-type-option {
            cursor: pointer;
            padding: 10px;
            margin: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .user-type-option:hover {
                background-color: #f0f0f0;
            }

        h1 {
            text-align: center;
            margin: 50px auto;
            max-width: 550px;
            position: relative;
        }

            h1:before,
            h1:after {
                background-color: #e6be8a;
                display: block;
                height: 2px;
                content: "";
                position: absolute;
                width: 150px;
                top: 50%;
                transform: translateY(-50%);
                z-index: -1;
            }

            h1:before {
                left: -1px;
            }

            h1:after {
                right: -1px;
            }

        .intro-container header {
            text-align: center;
            padding: 1px; /* Adjust the padding to move the header upwards */
            margin-top: -150px; /* Adjust the margin-top to move the header upwards */
            font-size: 20px;
            font-family: 'Noto Sans', sans-serif;
        }

        #intro {
            max-width: 900px;
            margin: auto;
            padding: 25px;
            font-family: 'Noto Sans', sans-serif;
            font-size: 18px;
            text-align: center;
            border: 5px solid #000; /* Add border properties */
            padding: 20px; /* Add padding for spacing between text and border */
            border-color: #800000;
            border-radius: 10px;
        }

        .under-nav {
            position: relative;
            bottom: 80px;
            background-image: url("../Content/Images/underheader.jpg");
            background-size: cover;
            background-position: center top;
            background-repeat: no-repeat;
            height: 80vh;
            width: 100%;
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
        }

        .as-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            background-color: #fff; /* Set background to white */
            margin-bottom:3rem;
        }

        .item {
            display: flex;
            width: 80%;
            margin: 0 20px; /* Margin only top and bottom */
            padding: 20px 0; /* Padding only top and bottom */
            border-bottom: 1px solid #ccc; /* Horizontal line separator */
        }

            .item img {
                width: 200px;
                height: auto;
                margin-right: 20px; /* Margin between image and description */
                border: 2px solid #ccc; /* Add border to the image */
                border-radius: 5px; /* Optional: rounded corners */
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add shadow effect */
            }

        .description {
            flex: 1;
            font-family: 'Noto Sans', sans-serif;
            font-size: 18px;
        }

        .name {
            margin-bottom: 10px;
            font-weight: bold;
            font-size: 20px;
        }
    </style>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script>
        function selectUserType(userType) {
            switch (userType) {
                case 'Alumni':
                    window.location.href = '/Account/AlumniLogin'; // Redirect to Alumni login view
                    break;
                case 'Company':
                    window.location.href = '/Account/CompanyLogin'; // Redirect to Company login view
                    break;
                case 'Admin':
                    window.location.href = '/Account/AdminLogin'; // Redirect to Admin login view
                    break;
                default:
                    break;
            }
        }
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <!-- Add 'fixed-top' class to navbar -->
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                Polytechnic University of the Philippines
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Home/About">About Us</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link btn btn-primary text-white" href="#" data-toggle="modal" data-target="#userTypeModal">Log in</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="under-nav"></div>
    </header>
    <div class="intro-container">
        <header>
            <h1><span><b>About Us</b></span></h1>
        </header>
    </div>
    <main>
        <div class="as-container">
            <div class="item">
                <img src="~/Content/Images/pao.jpg"  alt="Image 1">
