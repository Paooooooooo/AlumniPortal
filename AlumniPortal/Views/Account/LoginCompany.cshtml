@model AlumniPortal.Models.CompanyLoginModel

@{
    ViewBag.Title = "Company Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a; /* Pale maroon color */
            width: 100%;
            z-index: 1000; /* Ensure navbar is on top */
            min-height: 4.5rem; /* Set minimum height for the navbar */
            padding: 0.5rem 1rem; /* Adjust padding inside the navbar */
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif; /* Apply Cinzel font to navbar elements */
            font-weight: 400; /* Apply Cinzel Regular (400) */
            font-size: 20px; /* Increase font size for navbar text */
        }

        .navbar-brand {
            display: flex;
            align-items: center; /* Center vertically */
        }

            .navbar-brand img {
                height: 50px; /* Set image height */
                margin-right: 10px; /* Adjust margin between image and text */
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a; /* Change button background color to #e6be8a */
            border-color: #e6be8a; /* Match border color with background color */
            color: black !important; /* Set initial text color to black */
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54; /* Slightly darker hover background color */
                border-color: #cc9f54; /* Match hover border color with hover background color */
                color: white !important; /* Change text color to white on hover */
            }

        /* Style for the buttons */
        .bg {
            background-image: url('../Content/Images/pup_pylon.png');
            height: 75vh;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: rgba(255, 255, 255, 255);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            margin-top: 5rem; /* Add margin to position the login container below the navbar */
        }

            .login-container h1 {
                font-family: 'Cinzel', serif;
                text-align: center;
                margin-bottom: 20px;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .btn-login {
            background-color: #a52a2a;
            border-color: #a52a2a;
            color: white;
            width: 100%;
        }

            .btn-login:hover {
                background-color: #800000;
                border-color: #800000;
            }

        .btn-home {
            background-color: #e6be8a;
            border-color: #e6be8a;
            color: black;
            width: 100%;
            margin-top: 5px;
        }

            .btn-home:hover {
                background-color: #d9aa7a;
                border-color: #d9aa7a;
                color: black;
            }

        .form-group {
            margin-bottom: 1.5rem; /* Adjust margin to create space between form fields */
            margin-left: 0px;
        }

        .button-container {
            margin-top: 2rem; /* Adjust margin to create space above buttons */
            margin-left: 0px;
        }

        .container {
            margin-top: 100px;
            font-family: 'Noto Sans', serif;
            max-width: 100%;
            margin-left: 0px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <!-- Add 'fixed-top' class to navbar -->
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>
    </header>
    <div class="bg">
        <div class="login-container">
            <h1><b>Admin Login</b></h1>
            @using (Html.BeginForm("LoginCompany", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Company Email", new { @for = "comp_email" })
                    @Html.TextBoxFor(m => m.comp_email, new { @class = "form-control", style = "width: 100%;", id = "comp_email" })
                    @Html.ValidationMessageFor(m => m.comp_email)
                </div>
                <div class="form-group">
                    @Html.Label("Password", new { @for = "comp_password" })
                    @Html.PasswordFor(m => m.comp_password, new { @class = "form-control", style = "width: 100%;", id = "comp_password" })
                    @Html.ValidationMessageFor(m => m.comp_password)
                </div>
                <div class="form-group button-container">
                    <input type="submit" value="Login" class="btn btn-primary btn-login mr-2" />
                    <button type="button" onclick="location.href='@Url.Action("Index", "Home")'" class="btn btn-secondary btn-home">Back</button>
                </div>
            }
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
