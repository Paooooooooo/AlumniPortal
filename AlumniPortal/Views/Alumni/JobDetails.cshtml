@model AlumniPortal.Models.JobPostDetailsModel

@{
    ViewBag.Title = "JobDetails";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Job Details - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a;
            width: 100%;
            z-index: 1000;
            min-height: 4.5rem;
            padding: 0 1rem;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif;
            font-weight: 400;
            font-size: 20px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 50px;
                margin-right: 10px;
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a;
            border-color: #e6be8a;
            color: black !important;
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54;
                border-color: #cc9f54;
                color: white !important;
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54;
                color: white !important;
            }

        .nav-item + .nav-item {
            margin-left: 10px;
        }

        .content-container {
            margin-top:6rem;
            font-family: 'Noto Sans', serif;
        }

        .job-details {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
        }

        .job-title {
            font-size: 24px;
            font-weight: bold;
        }

        .company-name {
            font-size: 20px;
            color: #555;
        }

        .section-title {
            font-size: 18px;
            font-weight: bold;
            margin-top: 20px;
        }

        .job-specifications, .job-details-table, .contact-info {
            margin-top: 10px;
        }

            .job-details-table th, .job-details-table td {
                padding: 10px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/PartnerCompanies">Partner Companies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/ManageCV">Manage CV</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Events">Events</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Alumni/AlumniProfile">Profile</a>
                            <a class="dropdown-item" href="/Alumni/ChangePassword">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Alumni/Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="content-container">
        <div class="job-details">
            <h2 class="job-title">@Model.JobTitle</h2>
            <h3 class="company-name">@Model.CompanyName</h3>
            <div class="section-title">Job Description</div>
            <p class="job-specifications">@Model.JobSpecifications</p>


            <table class="table job-details-table">
                <tr>
                    <th style="font-weight: bold;">Job Type</th>
                    <th style="font-weight: bold;">Job Target</th>
                    <th style="font-weight: bold;">Salary</th>
                </tr>
                <tr>
                    <td>@Model.JobType</td>
                    <td>@Model.JobTarget</td>
                    <td>@Model.JobSalary</td>
                </tr>
            </table>

            <div class="section-title">Contact Information</div>
            <div class="contact-info">
                <p>Contact Name: @Model.CompanyContactName</p>
                <p>Contact Number: @Model.CompanyContactNumber</p>
                <p>Email: @Model.CompanyEmail</p>
            </div>
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
