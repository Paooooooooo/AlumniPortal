@model AlumniPortal.Models.AddCVViewModel

@{
    ViewBag.Title = "Add CV";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a;
            width: 100%;
            z-index: 1000;
            min-height: 4.5rem;
            padding: 0 1rem;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif;
            font-weight: 400;
            font-size: 20px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 50px;
                margin-right: 10px;
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a;
            border-color: #e6be8a;
            color: black !important;
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54;
                border-color: #cc9f54;
                color: white !important;
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54;
                color: white !important;
            }

        .nav-item + .nav-item {
            margin-left: 10px;
        }

        .container {
            margin-top: 6rem;
            margin-bottom:2rem;
        }

        .form-container {
            border: 1px solid #ccc;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

            .form-container h2 {
                margin-bottom: 2rem;
            }

        .form-section {
            margin-bottom: 2rem;
        }

            .form-section h4 {
                margin-bottom: 1rem;
            }

        .form-horizontal .form-group {
            margin-bottom: 1rem;
        }

        .form-control {
            margin-bottom: 1rem;
        }

        .btn-custom {
            background-color: #a52a2a;
            color: white;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #e6be8a;
                color: black;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/PartnerCompanies">Partner Companies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/ManageCV">Manage CV</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Events">Events</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Alumni/AlumniProfile">Profile</a>
                            <a class="dropdown-item" href="/Alumni/ChangePassword">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Alumni/Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="form-container">
            <h2 class="text-left">Add CV</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-section">
                        <h4>Experiences</h4>
                        <div id="experience-list">
                            @for (int i = 0; i < Model.Experiences.Count; i++)
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Experiences[i], new { @class = "form-control", placeholder = "Experience" })
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-custom" onclick="addExperience()">Add Experience</button>
                    </div>

                    <div class="form-section">
                        <h4>Skills</h4>
                        <div id="skill-list">
                            @for (int i = 0; i < Model.Skills.Count; i++)
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Skills[i], new { @class = "form-control", placeholder = "Skill" })
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-custom" onclick="addSkill()">Add Skill</button>
                    </div>

                    <div class="form-section">
                        <h4>Educational Attainments</h4>
                        <div id="education-list">
                            @for (int i = 0; i < Model.EducAttainments.Count; i++)
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.EducAttainments[i], new { @class = "form-control", placeholder = "Education" })
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-custom" onclick="addEducation()">Add Education</button>
                    </div>

                    <div class="form-group text-right">
                        <input type="submit" value="Save" class="btn btn-custom" />
                    </div>
                </div>
            }

            @section Scripts {
                <script type="text/javascript">
                    function addExperience() {
                        var list = document.getElementById("experience-list");
                        var newExperience = document.createElement("div");
                        newExperience.className = "form-group";
                        newExperience.innerHTML = '<input name="Experiences" type="text" class="form-control" placeholder="Experience" />';
                        list.appendChild(newExperience);
                    }

                    function addSkill() {
                        var list = document.getElementById("skill-list");
                        var newSkill = document.createElement("div");
                        newSkill.className = "form-group";
                        newSkill.innerHTML = '<input name="Skills" type="text" class="form-control" placeholder="Skill" />';
                        list.appendChild(newSkill);
                    }

                    function addEducation() {
                        var list = document.getElementById("education-list");
                        var newEducation = document.createElement("div");
                        newEducation.className = "form-group";
                        newEducation.innerHTML = '<input name="EducAttainments" type="text" class="form-control" placeholder="Education" />';
                        list.appendChild(newEducation);
                    }
                </script>
            }
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
