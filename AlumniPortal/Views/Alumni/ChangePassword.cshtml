@model AlumniPortal.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a;
            width: 100%;
            z-index: 1000;
            min-height: 4.5rem;
            padding: 0 1rem;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif;
            font-weight: 400;
            font-size: 20px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 50px;
                margin-right: 10px;
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a;
            border-color: #e6be8a;
            color: black !important;
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54;
                border-color: #cc9f54;
                color: white !important;
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54;
                color: white !important;
            }

        .nav-item + .nav-item {
            margin-left: 10px;
        }

        .container {
            margin-top: 6rem;
            margin-bottom: 2rem;
        }

        .form-container {
            border: 1px solid #ccc;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            max-width: 600px; /* Set a max-width for the form */
            margin: 0 auto; /* Center the form container */
        }

            .form-container h2 {
                margin-bottom: 2rem;
            }

        .form-horizontal .form-group {
            display: flex;
            flex-direction: column;
            /* align-items: center; Remove or set to align-items: flex-start; */
            /* Center form groups horizontally */
        }

            .form-horizontal .form-group .col-md-10 {
                width: 100%; /* Ensure the inputs take full width */
                max-width: 500px; /* Set a max-width for the inputs */
            }

        .form-control {
            margin-bottom: 1rem;
        }

        .btn-custom {
            background-color: #a52a2a;
            color: white;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .btn-custom:hover {
                background-color: #e6be8a;
                color: black;
            }

        .intro-container {
            font-family: "Noto Sans", serif;
            max-width: 100%;
            margin: 20px;
        }

        .user-type-option {
            cursor: pointer;
            padding: 10px;
            margin: 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .user-type-option:hover {
                background-color: #f0f0f0;
            }

        .job-card {
            margin-bottom: 20px;
            text-decoration: none;
            color: inherit;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .job-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
                text-decoration: none;
            }

        .content-container {
            margin-top: 6rem;
        }

            .content-container h2 {
                margin-top: 6rem;
                margin-bottom: 20px;
            }

        .job-card:hover .card-body {
            color: maroon !important;
        }

        .job-card:hover {
            color: inherit;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/PartnerCompanies">Partner Companies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/ManageCV">Manage CV</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Events">Events</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Alumni/AlumniProfile">Profile</a>
                            <a class="dropdown-item" href="/Alumni/ChangePassword">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Alumni/Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="form-container">
            <h2>Change Password</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
            @using (Html.BeginForm("ChangePassword", "Alumni", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CurrentPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmNewPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-custom">Change Password</button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
