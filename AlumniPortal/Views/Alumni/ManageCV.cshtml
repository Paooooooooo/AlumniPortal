@model AlumniPortal.Models.ManageCVViewModel
@{
    ViewBag.Title = "ManageCV";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a;
            width: 100%;
            z-index: 1000;
            min-height: 4.5rem;
            padding: 0 1rem;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif;
            font-weight: 400;
            font-size: 20px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 50px;
                margin-right: 10px;
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a;
            border-color: #e6be8a;
            color: black !important;
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54;
                border-color: #cc9f54;
                color: white !important;
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54;
                color: white !important;
            }

        .nav-item + .nav-item {
            margin-left: 10px;
        }

        h2 {
            margin-top: -10px;
            margin-bottom: 10px;
        }

        h3 {
            font-size: 30px;
            margin-top: 30px;
            margin-bottom: 20px;
        }

        .container {
            margin-top: 6rem;
            border: 1px solid #ced4da; /* Border color */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow */
            padding: 20px; /* Padding inside the container */
            margin-bottom: 4rem;
        }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <!-- Add 'fixed-top' class to navbar -->
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/PartnerCompanies">Partner Companies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/ManageCV">Manage CV</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Alumni/Events">Events</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Alumni/AlumniProfile">Profile</a>
                            <a class="dropdown-item" href="/Alumni/ChangePassword">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Alumni/Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <div>
            <h2>Alumni Information</h2>
            <hr />
            <p>Name: @Model.AlumniInfo.alum_name</p>
            <p>Sex: @Model.AlumniInfo.alum_sex</p>
            <p>Birthdate: @Model.AlumniInfo.alum_bdate.ToShortDateString()</p>
            <p>Email: @Model.AlumniInfo.alum_email</p>
            <p>Contact Number: @Model.AlumniInfo.alum_con</p>
            <!-- Display other alumni information as needed -->

            <h3>CV Information</h3>

            @if (!Model.HasCVEntries)
            {
                <div>
                    @Html.ActionLink("Add New CV Entry", "AddCV", null, new { @class = "btn btn-primary" })
                </div>
            }

            @if (Model.CVs != null && Model.CVs.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Experiences</th>
                            <th>Skills</th>
                            <th>Educational Attainments</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cv in Model.CVs)
                        {
                            <tr>
                                <td>
                                    <ul>
                                        @foreach (var experience in cv.experiences.Split(','))
                                        {
                                            <li>@experience.Trim()</li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    <ul>
                                        @foreach (var skill in cv.skills.Split(','))
                                        {
                                            <li>@skill.Trim()</li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    <ul>
                                        @foreach (var education in cv.educ_attain.Split(','))
                                        {
                                            <li>@education.Trim()</li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditCV", new { id = cv.cv_id }, new { @class = "btn btn-info btn-sm" })
                                    @Html.ActionLink("Delete", "DeleteCV", new { id = cv.cv_id }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- Bootstrap and jQuery JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
