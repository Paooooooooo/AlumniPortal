@model AlumniPortal.Models.job_post_tbl
@{
    ViewBag.Title = "Create Job Post";
}

<!DOCTYPE html>
<html>
<head>
    <title>Job Posts - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
</head>
<body>
    <header>
        <nav>
            <ul id="navMenu">
                <li><a href="/Company/Index">Home</a></li>
                <li><a href="/Company/Events">Events</a></li>
                <li><a href="/Company/JobPosting">Job Posting</a></li>
                <li><a href="/Home/Index" class="btn btn-primary">Logout</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <h2>Delete Job Post</h2>

        <h3>Are you sure you want to delete this job post?</h3>
        <div>
            <h4>Job Post Details:</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.job_title)</dt>
                <dd>@Html.DisplayFor(model => model.job_title)</dd>

                <dt>@Html.DisplayNameFor(model => model.job_target)</dt>
                <dd>@Html.DisplayFor(model => model.job_target)</dd>

                <dt>@Html.DisplayNameFor(model => model.job_loc)</dt>
                <dd>@Html.DisplayFor(model => model.job_loc)</dd>

                <dt>@Html.DisplayNameFor(model => model.job_specs)</dt>
                <dd>@Html.DisplayFor(model => model.job_specs)</dd>

                <dt>@Html.DisplayNameFor(model => model.job_salary)</dt>
                <dd>@Html.DisplayFor(model => model.job_salary)</dd>

                <dt>@Html.DisplayNameFor(model => model.job_type)</dt>
                <dd>@Html.DisplayFor(model => model.job_type)</dd>

                <dt>@Html.DisplayNameFor(model => model.job_post_date)</dt>
                <dd>@Html.DisplayFor(model => model.job_post_date)</dd>

                <dt>@Html.DisplayNameFor(model => model.job_deadline)</dt>
                <dd>@Html.DisplayFor(model => model.job_deadline)</dd>
            </dl>

            @using (Html.BeginForm("DeleteJobPost", "Company", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.job_id)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "JobPosting", "Company", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
