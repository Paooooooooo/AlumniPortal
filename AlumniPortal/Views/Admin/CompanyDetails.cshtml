@model AlumniPortal.Models.comp_tbl

@{
    ViewBag.Title = "CompanyDetails";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a;
            width: 100%;
            z-index: 1000;
            min-height: 4.5rem;
            padding: 0 1rem;
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif;
            font-weight: 400;
            font-size: 20px;
        }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 50px;
                margin-right: 10px;
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a;
            border-color: #e6be8a;
            color: black !important;
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54;
                border-color: #cc9f54;
                color: white !important;
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54;
                color: white !important;
            }

        .nav-item + .nav-item {
            margin-left: 10px;
        }

        h2 {
            margin-top: -10px;
            margin-bottom: 10px;
        }

        h3 {
            font-size: 30px;
            margin-top: 30px;
            margin-bottom: 20px;
        }

        .container {
            margin-top: 6rem;
            border: 1px solid #ced4da; /* Border color */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow */
            padding: 20px; /* Padding inside the container */
            margin-bottom:4rem;
        }

        .btn-sm {
            background-color: #a52a2a;
            color: white;
        }

            .btn-sm:hover {
                background-color: #e6be8a;
                color: black;
            }

        .btn-default {
            background-color: #f8f9fa;
            color: black;
        }

            .btn-default:hover {
                background-color: #e2e6ea;
                color: black;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <!-- Add 'fixed-top' class to navbar -->
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">Home</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/Events">Events</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/ManageAlumni">Alumni</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/ManageCompanies">Companies</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Admin/Profile">Profile</a>
                            <a class="dropdown-item" href="/Admin/ChangePassword">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Admin/Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <h2>@Model.comp_name Details</h2>

        <p>
            <strong>Contact Number:</strong> @Model.comp_con_num <br />
            <strong>Contact Name:</strong> @Model.comp_con_name <br />
            <strong>Email:</strong> @Model.comp_email <br />
            <strong>Address:</strong> @Model.comp_address <br />
        </p>

        <h3>Job Posts</h3>

        @if (!Model.job_post_tbl.Any())
        {
            <p>There are no posted jobs.</p>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>Job Title</th>
                    <th>Location</th>
                    <th>Posted Date</th>
                    <th>Deadline</th>
                    <th>Actions</th>
                </tr>
                @foreach (var job in Model.job_post_tbl)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => job.job_title)</td>
                        <td>@Html.DisplayFor(modelItem => job.job_loc)</td>
                        <td>@job.job_post_date.ToString("yyyy-MM-dd")</td>
                        <td>@job.job_deadline.ToString("yyyy-MM-dd")</td>
                        <td>
                            @Html.ActionLink("Edit", "EditJobPost", new { id = job.job_id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Delete", "DeleteJobPost", new { id = job.job_id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </table>
            @Html.ActionLink("Back", "ManageCompanies", "Admin", null, new { @class = "btn btn-default" })
        }
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
