@model AlumniPortal.Models.event_tbl

@{
    ViewBag.Title = "Event Details";
}

<!DOCTYPE html>
<html>
<head>
    <title>Event Details - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a; /* Pale maroon color */
            width: 100%;
            z-index: 1000; /* Ensure navbar is on top */
            min-height: 4.5rem; /* Set minimum height for the navbar */
            padding: 0 1rem; /* Adjust padding inside the navbar */
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif; /* Apply Cinzel font to navbar elements */
            font-weight: 400; /* Apply Cinzel Regular (400) */
            font-size: 20px; /* Increase font size for navbar text */
        }

        .navbar-brand {
            display: flex;
            align-items: center; /* Center vertically */
        }

            .navbar-brand img {
                height: 50px; /* Set image height */
                margin-right: 10px; /* Adjust margin between image and text */
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a; /* Change button background color to #e6be8a */
            border-color: #e6be8a; /* Match border color with background color */
            color: black !important; /* Set initial text color to black */
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54; /* Slightly darker hover background color */
                border-color: #cc9f54; /* Match hover border color with hover background color */
                color: white !important; /* Change text color to white on hover */
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54; /* Hover background color */
                color: white !important; /* Text color on hover */
            }

        .nav-item + .nav-item {
            margin-left: 10px; /* Adjust the space between each nav item */
        }

        .container {
            margin-top: 6rem;
            max-width: 1000px; /* Set maximum width of the container */
            padding: 5px;
        }

        .content-container {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #f8f9fa;
            margin-bottom: 2rem;
            max-width: 100%; /* Ensure content container takes full width */
            overflow-x: auto; /* Enable horizontal scrolling if needed */
        }

            .content-container h2 {
                margin-bottom: 20px;
                color: black;
                font-family: 'Noto Sans', serif;
                font-weight: bold;
            }

        .table-responsive {
            display: flex;
            justify-content: center; /* Center the table horizontally */
            overflow-x: auto;
        }

        .table {
            width: 100%;
            max-width: 100%; /* Ensure table fits within the container */
            color: #212529;
        }

            .table th {
                background-color: #f8f9fa;
                color: #495057;
                font-weight: bold;
            }

            .table td {
                vertical-align: middle;
                border-bottom: 1px solid #ddd; /* Add light gray border at the bottom of cells */
            }

            .table thead th {
                border-bottom: 2px solid black;
            }

            .table tbody tr:nth-child(even) {
                background-color: #f2f2f2;
                transition: background-color 0.5s ease;
            }

            .table tbody tr:hover {
                background-color: #d4d4d4;
                color: #212529;
            }

            .table a {
                color: #007bff;
            }

                .table a:hover {
                    color: #0056b3;
                }

        .btn-custom {
            background-color: #a52a2a;
            color: white !important;
            border-color: #a52a2a;
            margin-top: 5px;
        }

            .btn-custom:hover {
                background-color: #e6be8a;
                color: black !important;
                border-color: #e6be8a;
            }

        .btn-back {
            background-color: #f9f9f9 !important;
            color: black !important;
            border-color: black;
        }

            .btn-back:hover {
                background-color: #e6e6e6 !important; /* Slightly darker color on hover */
                color: black !important;
                border-color: black;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <!-- Add 'fixed-top' class to navbar -->
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">Home</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/Events">Events</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/ManageAlumni">Alumni</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/ManageCompanies">Companies</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Admin/EditProfile">Profile</a>
                            <a class="dropdown-item" href="/Admin/ChangePassword">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Admin/Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="content-container">
            <h2>Event Details</h2>

            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Event Name</th>
                            <td>@Html.DisplayFor(model => model.event_name)</td>
                        </tr>
                        <tr>
                            <th>Event Description</th>
                            <td>@Html.DisplayFor(model => model.event_desc)</td>
                        </tr>
                        <tr>
                            <th>Event Date</th>
                            <td>@String.Format("{0:d}", Model.event_date)</td>
                        </tr>
                        <tr>
                            <th>Event Location</th>
                            <td>@Html.DisplayFor(model => model.event_loc)</td>
                        </tr>
                        <tr>
                            <th>Event Post Date</th>
                            <td>@String.Format("{0:d}", Model.event_post_date)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                @Html.ActionLink("Edit", "EditEvent", new { id = Model.event_id }, new { @class = "btn btn-custom" })
                @Html.ActionLink("Back", "Events", null, new { @class = "btn btn-back btn-custom ml-2" })
            </div>
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
