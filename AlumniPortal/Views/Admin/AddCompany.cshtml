@model AlumniPortal.Models.comp_tbl

@{
    ViewBag.Title = "AddCompany";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Alumni Portal</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400&family=Noto+Sans&display=swap" rel="stylesheet">
    <style>
        .navbar-custom {
            background-color: #a52a2a; /* Pale maroon color */
            width: 100%;
            z-index: 1000; /* Ensure navbar is on top */
            min-height: 4.5rem; /* Set minimum height for the navbar */
            padding: 0 1rem; /* Adjust padding inside the navbar */
        }

        .navbar-brand, .nav-link {
            color: white !important;
            font-family: 'Cinzel', serif; /* Apply Cinzel font to navbar elements */
            font-weight: 400; /* Apply Cinzel Regular (400) */
            font-size: 20px; /* Increase font size for navbar text */
        }

        .navbar-brand {
            display: flex;
            align-items: center; /* Center vertically */
        }

            .navbar-brand img {
                height: 50px; /* Set image height */
                margin-right: 10px; /* Adjust margin between image and text */
            }

        .nav-link.btn-primary {
            font-weight: bold;
            background-color: #e6be8a; /* Change button background color to #e6be8a */
            border-color: #e6be8a; /* Match border color with background color */
            color: black !important; /* Set initial text color to black */
        }

            .nav-link.btn-primary:hover {
                font-weight: bold;
                background-color: #cc9f54; /* Slightly darker hover background color */
                border-color: #cc9f54; /* Match hover border color with hover background color */
                color: white !important; /* Change text color to white on hover */
            }

        .navbar-nav .nav-item .nav-link {
            transition: background-color 0.3s ease, color 0.3s ease; /* Smooth transition */
        }

            .navbar-nav .nav-item .nav-link:hover {
                background-color: #cc9f54; /* Hover background color */
                color: white !important; /* Text color on hover */
            }

        .nav-item + .nav-item {
            margin-left: 10px; /* Adjust the space between each nav item */
        }

        .btn-create {
            background-color: #a52a2a;
            color: white;
        }

            .btn-create:hover {
                background-color: #e6be8a;
                color: black;
            }

        .btn-cancel {
            background-color: #f8f9fa;
            color: black;
        }

            .btn-cancel:hover {
                background-color: #e2e6ea;
                color: black;
            }

        .container {
            margin-top: 6rem;
            margin-bottom: 2rem;
        }

        .form-container {
            border: 1px solid #ccc;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #fff;
            max-width: 600px; /* Set a max-width for the form */
            margin: 0 auto; /* Center the form container */
        }

            .form-container h2 {
                margin-bottom: 2rem;
            }

        .form-horizontal .form-group {
            display: flex;
            flex-direction: column;
            /* align-items: center; Remove or set to align-items: flex-start; */
            /* Center form groups horizontally */
        }

            .form-horizontal .form-group .col-md-10 {
                width: 100%; /* Ensure the inputs take full width */
                max-width: 500px; /* Set a max-width for the inputs */
            }

        .form-control {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
            <!-- Add 'fixed-top' class to navbar -->
            <a class="navbar-brand text-white" href="/">
                <img src="~/Content/Images/puplogo.png" alt="Logo" height="40" class="d-inline-block align-top mr-2">
                PUP Alumni Portal
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/Index">Home</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/Events">Events</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/ManageAlumni">Alumni</a>
                    </li>
                    <li class="nav-item ml-3">
                        <a class="nav-link" href="/Admin/ManageCompanies">Companies</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Settings
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Admin/Profile">Profile</a>
                            <a class="dropdown-item" href="/Admin/ChangePassword">Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Admin/Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="form-container">
            <h2 class="text-left">Add Company</h2>
            @using (Html.BeginForm("AddCompany", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    @Html.LabelFor(model => model.comp_name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.comp_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.comp_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.comp_con_num, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.comp_con_num, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.comp_con_num, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.comp_con_name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.comp_con_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.comp_con_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.comp_email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.comp_email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.comp_email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.comp_address, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.comp_address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.comp_address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.comp_password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.comp_password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.comp_password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Add Company" class="btn btn-create" />
                        <a href="@Url.Action("ManageCompanies", "Admin")" class="btn btn-cancel">Cancel</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>

